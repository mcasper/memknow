<h2>Scheduled Review </h2>
<%= render "shared/back" %>
<br/><br/>

<div class="row">
	<% @reviews.each do |flashcard| %>
	<div class="col-md-4"></div>
	<div class="col-md-4 col-xs-12">
		<div class="flip-container">
			<div class="flipper">
				<div class="front well">
					<h2>Question</h2>
					<hr/>
					<%= flashcard.question %>
				</div>
				<div class="back well">
					<h2>Answer</h2>
					<hr/>
					<%= flashcard.answer %>
					<div class="row">
						<div class="card-push"></div>
						How'd you do?<br/>
						Rate your answer, and we'll schedule the next best time for you to study:
						<div class="col-md-3 col-xs-3 btn btn-success">
							:(
						</div>
						<div class="col-md-3 col-xs-3 btn btn-success">
							Ehhh
						</div>
						<div class="col-md-3 col-xs-3 btn btn-success">
							Not bad
						</div>
						<div class="col-md-3 col-xs-3 btn btn-success">
						Aced
						</div>
					</div>
				</div>
			</div>
		</div>
		<br/>
		<button onclick="document.querySelector('.flip-container').classList.toggle('hover');" class="btn btn-success" id="flip-btn">Flip over</button>
	</div>
	<div class="col-md-4"></div>
	<% end %>
</div>
