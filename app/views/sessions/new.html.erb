<h2>Sign in</h2>

<%= form_for :session, url: signin_path do |f| %>
  <div class="registration-error"></div>

  <div class="field form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit "Login" %>

<% end %>
