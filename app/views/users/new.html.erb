<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4 col-xs-12">
		<div class="flip-container">
			<div class="flipper">
				<%= form_for :flashcard, url: flashcards_path do |f| %>
				<div class="front well">
					<h2>Write your question here...</h2>
					<%= f.label :question %>
					<%= f.text_field :question, class: 'form-control' %>
				</div>
				<div class="back well">
					<h2>...and write your answer here!</h2>
					<p>*hint: pull on the bottom right corner of the text box for more room!</p>
					<%= f.label :answer %>
					<%= f.text_area :answer, class: 'form-control' %>
				</div>
			</div>
		</div>
		<br/>
		<button onclick="document.querySelector('.flip-container').classList.toggle('hover');" class="btn btn-success" id="flip-btn">
			<i class="glyphicon glyphicon-refresh"></i>
			Flip over
		</button>
		<% f.submit "Create Flashcard", class: "btn btn-success" %>
		<% end %>
	</div>
	<div class="col-md-4"></div>
</div>

<br/>
<br/>

<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<h2>Start Studying Now!</h2>
		<%= form_for :user, url: users_path do |f| %>
			<% if flash[:notice] %>
				<div id="registration-error">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<% if flash[:error] %>
				<div id="registration-error">
					<%= flash[:error] %>
				</div>
			<% end %>
			
			<div class="field form-group">
				<%= f.label :email %>
				<%= f.text_field :email, class: 'form-control' %>
			</div>

			<div class="field form-group">
				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>
			</div>

			<%= submit_tag 'Create Account', class: 'btn btn-danger' %>
			or
			<%= link_to 'Sign in', signin_path, class: 'btn btn-warning' %>
		<% end %>
	</div>
	<div class="col-md-4"></div>
</div>


