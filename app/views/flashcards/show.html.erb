<h2>Mems</h2>
<%= render "shared/back" %>
<br/><br/>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6 col-xs-12">
		<div class="flip-container">
			<div class="flipper">
				<div class="front well">
					<h2>Question</h2>
					<%= @flashcard.question %>
				</div>
				<div class="back well">
					<h2>Answer</h2>
					<%= @flashcard.answer %>
				</div>
			</div>
		</div>
		<br/>
		<button onclick="document.querySelector('.flip-container').classList.toggle('hover');" class="btn btn-success" id="flip-btn">
			Flip over <i class="glyphicon glyphicon-refresh"></i>
		</button>
	</div>
	<div class="col-md-3"></div>
</div>