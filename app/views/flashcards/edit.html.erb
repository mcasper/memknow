<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4 col-xs-12">
		<div class="flip-container">
			<div class="flipper">
				<%= form_for :flashcard, url: edit_flashcard_path do |f| %>
				<div class="front well">
					<h2>Question</h2>
					<%= f.text_field :question, class: 'form-control' %>
				</div>
				<div class="back well">
					<h2>Answer</h2>
					<%= f.text_area :answer, class: 'form-control' %>
				</div>
			</div>
		</div>
		<br/>
		<div class="col-md-6">
			<%= f.submit 'Update Flashcard', class: 'btn btn-success' %>
			<% end %>
		</div>
		<div class="col-md-6">
			<button onclick="document.querySelector('.flip-container').classList.toggle('hover');" class="btn btn-success" id="flip-btn">Flip over</button>
		</div>
	</div>
	<div class="col-md-4"></div>
</div>
